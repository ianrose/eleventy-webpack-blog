<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{{ title }}</title>
		<link rel="stylesheet" href="/bundles/{{#if manifest.[app.css]}}{{manifest.[app.css]}}{{else}}app.css{{/if}}">
		<link rel="alternate" href="/feed/atom.xml" type="application/atom+xml" title="{{ title }}">
	</head>
	<body>
		<header>
			<ul class="nav">
				<li class="nav-item"><a href="">{{ nav.data.navtitle }}</a></li>
		</header>
		<img class="logo" src="/images/logo.png" alt="">
		{{{ content }}}

		<footer>
			<p><em>Current page: {{page.url}}<code></code></em></p>
		</footer>
		<script src="/bundles/{{#if manifest.[app.js]}}{{manifest.[app.js]}}{{else}}app.bundle.js{{/if}}"></script>
	</body>
</html>
